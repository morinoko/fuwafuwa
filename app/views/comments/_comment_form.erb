
<h3>Add a comment:</h3> 
<%= form_for([@post, @post.comments.build]) do |f| %>
  
  <div class="form-group">
    <%= f.label :commenter, class: 'sr-only' %><br />
    <%= f.text_field :commenter, class: 'form-control input-sm', placeholder: 'name' %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_area :body, class: 'form-control input-sm', placeholder: 'comment', rows: 1 %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Send", class: 'btn btn-primary btn-sm' %>
  </div>

<% end %>
