<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p>
  	<span class="text-warning">
	  <strong><%= comment.commenter %></strong>
	</span>
    <%= comment.body %>
    <small><%= link_to 'Delete', [comment.post, comment],
  								  method: :delete,
  								  data: { confirm: 'Are you sure?' } %></small>
  </p>
<% end %>